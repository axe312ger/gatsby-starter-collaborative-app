{
  "name": "gatsby-starter-collaborative-app-server",
  "description": "Clickers server",
  "private": true,
  "version": "1.0.0",
  "author": "Benedikt RÃ¶tsch <info@benedikt-roetsch.de>",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently --kill-others 'npm:dev:db' 'npm:dev:server'",
    "dev:db": "mongod --config /usr/local/etc/mongod.conf",
    "dev:server": "nodemon -x ts-node . -e ts",
    "postinstall": "npm run build",
    "build": "tsc --pretty",
    "start": "node dist/index.js",
    "test": "JEST_JUNIT_OUTPUT=../test-reports/jest/server-unit-test-results.xml jest",
    "lint": "tslint src/**/*.ts",
    "deploy-production": "cd .. && now --docker --public && now alias"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --config ../.prettierrc",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "sharedb": "^1.0.0-beta.12",
    "sharedb-access": "^4.2.0",
    "sharedb-mongo": "^1.0.0-beta.5",
    "websocket-json-stream": "0.0.3",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/ws": "^6.0.0",
    "codecov": "^3.0.4",
    "concurrently": "^4.0.1",
    "jest": "^23.5.0",
    "jest-junit": "^5.1.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "1.14.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
